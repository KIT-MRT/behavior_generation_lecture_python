// See https://aka.ms/devcontainer.json and 
// https://github.com/devcontainers/templates/tree/main/src/python for further info
{
    "name": "Py311-DMMP-Lecture",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "features": {},

    "postCreateCommand": "./.devcontainer/postCreateCommand.sh",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", 
                "ms-python.debugpy", 
                "charliermarsh.ruff", 
                "editorconfig.editorconfig", 
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.testing.pytestArgs": ["tests"],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/behavior_generation_lecture_python/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/behavior_generation_lecture_python/.venv/bin/pytest"
            }
        }
    }
}